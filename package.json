{
  "name": "@obxyz/dist-deploy",
  "description": "deploy local files to the server",
  "version": "1.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest run",
    "build": "tsup",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run lint && npm run test",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack .",
    "lint": "tsc"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obxyzcom/dist-deploy.git"
  },
  "bugs": {
    "url": "https://github.com/obxyzcom/dist-deploy/issues"
  },
  "homepage": "https://github.com/obxyzcom/dist-deploy",
  "keywords": [
    "node",
    "deploy"
  ],
  "author": "obxyz",
  "license": "MIT",
  "dependencies": {
    "node-ssh": "^13.2.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.2",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  }
}
